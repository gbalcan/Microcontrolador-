#include "config.c"
#include "def_pinos.h"
#include "stdio.h"

#define CS1	P2_0
#define CS2 P2_1
#define RS  P2_2
#define RW	P2_3
#define E 	P2_4
#define RST P2_5
#define ESQ	0
#define DIR 1
#define DB  P4
#define CO  0
#define DA	1

#define NOP4()	NOP();NOP();NOP(); NOP()
#define NOP8()	NOP4(); NOP4()
#define	NOP12()	NOP4(); NOP8()

void delay_ms(unsigned int t)
{
	TMOD &= 0xFC;
	TMOD |= 0x01;

	while(t--)
	{
		TR0 = 0;
		TF0 = 0;
		TL0 = 0x58;
		TH0 = 0x9E;
		TR0 = 1;
		
		while (TF0 != 1);
	}
}


void delay_us(unsigned int t)
{
	TR0 = 0;
	TF0 = 0;
	TMOD &= 0xFC;
	TMOD |= 0x02;
	TL0 = 0xE7;
	TH0 = 0xE7;
	TR0 = 1;

	while(t--)
	{
		while (TF0 != 1);
		TF0 = 0;
	}
}
  
