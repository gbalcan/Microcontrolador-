unsigned char le_glcd(__bit cd, __bit cs)
{
	unsigned char byte;
	RW = 1;
	CS1 = cs;
	CS2 = !cs;
	RS = cd;
	NOP4();
	E = 1;
	NOP8();
	SFRPAGE = CONFIG_PAGE;
	byte = DB;
	SFRPAGE = LEGACY_PAGE;
	NOP4();
	E = 0;
	NOP12();
	return(byte);
}

void esc_glcd(unsigned char byte, __bit cd, __bit cs)
{
	while (le_glcd(CO,cs) & 0x80);
	RW = 0;
	CS1 = cs;
	CS2 = !cs;
	RS = cd;
	SFRPAGE = CONFIG_PAGE;
	DB = byte;
	SFRPAGE = LEGACY_PAGE;
	NOP4();
	E = 1;
	NOP12();
	E = 0;	
	SFRPAGE = CONFIG_PAGE;
	DB = 0xFF;
	SFRPAGE = LEGACY_PAGE;
	NOP12();
}

void Ini_glcd(void)
{
	E = 0;
	RST = 1;
	CS1 = 1;
	CS2 = 1;

	SFRPAGE = CONFIG_PAGE;
	DB = 0xFF;
	SFRPAGE = LEGACY_PAGE;

	while(le_glcd(CO, ESQ) & 0x10);
	while(le_glcd(CO, DIR) & 0x10);

	esc_glcd(0x3F, CO, ESQ);
	esc_glcd(0x3F, CO, DIR);
	esc_glcd(0x40, CO, ESQ);
	esc_glcd(0xB8, CO, ESQ);
	esc_glcd(0xC0, CO, ESQ);
	esc_glcd(0x40, CO, DIR);
	esc_glcd(0xB8, CO, DIR);
	esc_glcd(0xC0, CO, DIR);
}

void conf_Y(unsigned char y, __bit cs)
{
	y &= 0x3F;
	esc_glcd(0x40 | y, CO, cs);
}

void conf_pag(unsigned char pag, __bit cs)
{
	pag &= 0x07;
	esc_glcd(0xB8 | pag, CO, cs);
}

void limpa_glcd(__bit cs)
{
	unsigned char i, j;

	for(i = 0; i < 8; i++)
	{
		conf_pag(i, cs);
		conf_Y(0, cs);
		for(j = 0; j < 64; j++)
			esc_glcd(0x00, DA, cs);
	}
}

void putchar(char c)
{
	unsigned char i, cs;
	static unsigned char count;

	if(c > 0 && c <= 8)
	{
		conf_pag(c-1, 0);
		conf_Y(0, 0);
		conf_pag(c-1, 1);
		conf_Y(0, 1);
		count = 0;
	}
	else
	{
		if(count < 8)
			cs = 0;
		else
			cs = 1;
		
		for (i = 0; i < 5; i++)
			esc_glcd(fonte[c-32][i], DA, cs);

	
		for (i = 0; i < 3; i++)
			esc_glcd(0x00, DA, cs);

		count++;
	}
}

void esc_DAC0(float v)
{
	v = (v / 2.43) * 4096;
	DAC0L = (unsigned int) v;
	DAC0H = ((unsigned int)v >> 8);
}

#define AIN0_0	0
#define AIN0_1	1
#define AIN0_2	2
#define AIN0_3	3
#define HVDA	4
#define AGND	5
#define P3EVEN	6
#define P3ODD	7
#define TEMP_SENSOR		8

#define G1		0
#define G2		1
#define G4		2
#define G8		3
#define G16		4
#define G05		6

unsigned int le_adc0(unsigned char canal, unsigned char ganho)
{
	//canal
	AMX0SL = canal;

	// ganho
	ADC0CF &= 0xF8;
	ADC0CF |= ganho;

	AD0BUSY = 1;
	NOP();
	while(AD0BUSY);

	return ((ADC0H << 8) | ADC0L);
}

void main()
{
	unsigned int ladc;

	Init_Device();
	SFRPAGE = LEGACY_PAGE;

	Ini_glcd();
	limpa_glcd(0);
	limpa_glcd(1);
	
	
	while(1)
	{
		ladc = le_adc0(AIN0_1, G1);
		printf_fast_f("\x02 = %u", ladc);
		printf_fast_f("\x04 Vin = %3.1fV", 2.43 * ladc / 4096);
		delay_ms(500);
	}
}